{
  "swagger":"2.0",
  "info":{
    "version":"1.0.0",
    "title":"Indo Region",
    "description":"A service to query all regions in Indonesia, based on data provided by The Indonesia Internal Affairs Ministry regulation with the mapping of respected JNE & Sicepat Code",
    "license":{
      "name":"MIT",
      "url":"https://opensource.org/licenses/MIT"
    }
  },
  "host":"localhost:4343",
  "basePath":"/",
  "tags":[
    {
      "name":"Region",
      "description":"API for region in the system"
    }
  ],
  "schemes":[
    "http"
  ],
  "consumes":[
    "application/json"
  ],
  "produces":[
    "application/json"
  ],
  "paths":{
    "/region/province":{
      "get":{
        "tags":[
          "Region"
        ],
        "summary":"Get a list of provinces",
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Response"
            }
          }
        }
      }
    },
    "/region/city":{
      "get":{
        "tags":[
          "Region"
        ],
        "summary":"Get a list of cities based on a province",
        "parameters":[
          {
            "name": "code",
            "in": "query",
            "description": "Province code we get from /province (see below for example)",
            "required": "true",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "11", "12", "13", "14", "21", "31"
              ],
              "default": "11"
            },
            "collectionFormat": "single"
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Response"
            }
          }
        }
      }
    },
    "/region/district":{
      "get":{
        "tags":[
          "Region"
        ],
        "summary":"Get a list of districts based on a city / regency",
        "parameters":[
          {
            "name": "code",
            "in": "query",
            "description": "City code we get from /city (see below for example)",
            "required": "true",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "11.01", "12.01", "13.01", "14.01", "21.01", "31.01"
              ],
              "default": "11.01"
            },
            "collectionFormat": "single"
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Response"
            }
          }
        }
      }
    },
    "/region/village":{
      "get":{
        "tags":[
          "Region"
        ],
        "summary":"Get a list of villages based on a district",
        "parameters":[
          {
            "name": "code",
            "in": "query",
            "description": "District code we get from /district (see below for example)",
            "required": "true",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "11.01.01", "12.01.01", "13.01.01", "14.01.01", "21.01.01", "31.01.01"
              ],
              "default": "11.01.01"
            },
            "collectionFormat": "single"
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Response"
            }
          }
        }
      }
    }
  },
  "definitions":{
    "Response": {
      "properties": {
        "code": { "type": "integer" },
        "body": {
          "type": "object",
          "properties": {
            "message": { "type": "string" },
            "data": { 
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "code": { "type": "string" },
                  "name": { "type": "string" },
                  "jne_id": { "type": "string" },
                  "sicepat_id": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}